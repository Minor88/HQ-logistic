# Пример файла .env для настройки переменных окружения
# Скопируйте этот файл в .env и заполните необходимыми значениями

# Настройки Django
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# База данных
# Для SQLite (разработка)
# Оставьте DATABASE_URL пустым или закомментируйте для использования SQLite

# Для PostgreSQL (через Supabase)
DATABASE_URL=postgres://user:password@host:port/database

# Настройки CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Настройки почты
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=no-reply@example.com 